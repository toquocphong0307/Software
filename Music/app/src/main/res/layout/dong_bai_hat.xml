<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/imageviewbaihat"
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <TextView
        android:text="Tên Bài Hát"
        android:textSize="18sp"
        android:textColor="#363636"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_toRightOf="@+id/imageviewbaihat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/textviewtenbaihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#121111"
        android:textSize="18sp"
        android:text="Ca Sĩ"
        android:layout_toRightOf="@+id/imageviewbaihat"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:id="@+id/textviewcasibaihat"
        android:layout_below="@+id/textviewtenbaihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/imageviewluotthich"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/iconlove"
        android:layout_marginRight="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</RelativeLayout>