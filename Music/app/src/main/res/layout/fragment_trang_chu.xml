<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fillViewport="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout"
        android:orientation="vertical"
        >
        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentbanner"
            android:name="com.example.mymusic.Fragment.Fragment_Banner"
            />
        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentplaylist"
            android:name="com.example.mymusic.Fragment.Fragment_Playlist"
            />
        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentchudevatheloai"
            android:name="com.example.mymusic.Fragment.Fragment_ChuDe_TheLoai_Today"
            />
        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentalbum"
            android:name="com.example.mymusic.Fragment.Fragment_Album"
            />
        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentbaihat"
            android:name="com.example.mymusic.Fragment.Fragment_Baihat"
            />

    </LinearLayout>

</ScrollView>