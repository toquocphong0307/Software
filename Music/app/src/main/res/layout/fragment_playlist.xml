<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    <TextView
        android:textColor="#3e3b3b"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/textviewtitleplaylist"
        android:text="PLAYLIST GẦN ĐÂY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ListView
         android:layout_below="@+id/textviewtitleplaylist"
         android:id="@+id/listviewplaylist"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0a0a0a"
        android:layout_marginBottom="8dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginTop="8dp"
        android:background="#c9c7c7"
        android:id="@+id/textviewviewmoreplaylist"
        android:layout_below="@+id/listviewplaylist"
        android:paddingLeft="5dp"
        android:drawableLeft="@drawable/iconmoreplaylist"
        android:drawablePadding="10dp"
        android:textSize="19sp"
        android:text="Xem thêm playlist"
        />
</RelativeLayout>